{
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.adoc"
      ]
    },
    "vscode": {
      "extensions": [
        "github.github-vscode-theme",
        "github.codespaces",
        "github.copilot",
        "github.copilot-chat",
        "asciidoctor.asciidoctor-vscode",
        "scodevim.vim",
        "mkhl.direnv"
      ],
      "settings": {
        "asciidoc": {
          "antora": {
            "enableAntoraSupport": false
          },
          "extensions": {
            "enableKroki": true
          }
        },
        "editor": {
          "formatOnPaste": true,
          "formatOnSave": true,
          "minimap": {
            "autohide": true
          }
        },
        "terminal": {
          "integrated": {
            "defaultProfile": {
              "linux": "zsh"
            }
          }
        },
        "update": {
          "showReleaseNotes": false
        },
        "vim": {
          "mouseSelectionGoesIntoVisualMode": false
        },
        "window": {
          "commandCenter": false
        },
        "workbench": {
          "colorTheme": "GitHub Dark Default",
          "preferredDarkColorTheme": "GitHub Dark Default",
          "preferredHighContrastColorTheme": "GitHub Dark High Contrast",
          "preferredHighContrastLightColorTheme": "GitHub Light High Contrast",
          "preferredLightColorTheme": "GitHub Light Default"
        }
      }
    }
  },
  "forwardPorts": [
    8501
  ],
  "hostRequirements": {
    "cpus": 2,
    "memory": "8gb",
    "storage": "32gb"
  },
  "image": "ghcr.io/cachix/devenv:latest",
  "overrideCommand": false,
  "portsAttributes": {
    "8501": {
      "label": "Default",
      "onAutoForward": "openPreview"
    }
  },
  "secrets": {},
  "updateContentCommand": "devenv ci"
}
